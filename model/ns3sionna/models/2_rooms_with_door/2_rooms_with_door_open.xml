<!-- Modified by Yannik Pilz: Changed materials and shapes -->
<scene version="2.1.0">

<!-- Defaults, these can be set via the command line: -Darg=value -->


<!-- Camera and Rendering Parameters -->

	<integrator type="path">
		<integer name="max_depth" value="12"/>
	</integrator>

  <!-- ITU Radio Materials -->
  <bsdf type="itu-radio-material" id="mat-itu_brick">
      <string name="type" value="brick"/>
      <float name="thickness" value="0.2"/>
  </bsdf>

  <bsdf type="itu-radio-material" id="mat-itu_concrete">
      <string name="type" value="concrete"/>
      <float name="thickness" value="0.3"/>
  </bsdf>
  
<!-- Emitters -->

	<emitter type="constant" id="World">
		<rgb value="1.0 1.0 1.0" name="radiance"/>
	</emitter>

<!-- Shapes -->

	<shape type="obj" id="mesh-floor">
		<string name="filename" value="meshes/floor.obj"/>
		<boolean name="face_normals" value="true"/>
		<ref id="mat-itu_concrete" name="bsdf"/>
	</shape>

	<shape type="obj" id="mesh-walls">
		<string name="filename" value="meshes/walls.obj"/>
		<boolean name="face_normals" value="true"/>
		<ref id="mat-itu_brick" name="bsdf"/>
    </shape>
	
</scene>